num.vec.while <- function(x)#
{#
    #Increment vector digits, which is the final outcome.#
    digits = numeric()#
    #Counter#
    dig.index = 1#
    while(x>0)#
    {#Begin while loop#
      digits[dig.index]= x%%10#
      x = x-digits[dig.index]#
      x = x%/%10#
      dig.index = dig.index+1#
    }#End while loop#
    #Output Vector#
    digits = digits[length(digits):1]#
    print(digits)#
}#
#
#Test#
x <- 2473#
num.vec.while(x)#
