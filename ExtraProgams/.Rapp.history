#Alternative using a for loop#
num.vec.for <- function(y)#
{#
  n = ceiling(log10(y))#
  digits = numeric()#
#
  for (i in 1:n)#
  {#
    digits[i] = y%%10#
    y = y-digits[i]#
    y = y%/%10#
  }#
  digits = digits[length(digits):1]#
  print(digits)#
}
Test#
y = 12345#
num.vec.for(y)
